/* pages/car/car.wxss */

.top-bar{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 20rpx;
    color: grey;
    background-color: #fff;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 2;
}

.car-item{
    background-color: #fff;
    margin: 20rpx;
    padding: 10rpx;
    border-radius: 10rpx;
    display: flex !important;
    align-items:center;
}

.car-item .check checkbox{
    margin:0;
}

.car-item .img image{
    display: block;
    border-radius: 10rpx;
    height: 200rpx;
    width:200rpx;
    margin: 10rpx;
}

.desc{
    position: relative;
    height: 200rpx;
}

.car-content{
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 30rpx;
    min-width: 400rpx;
}
.item-detail{
    margin-top: 20rpx;
    font-size: 25srpx;
    color: grey;
}
.bot-content{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
}
.price{
    color: red;
    font-size: 40rpx;
    float: left;
}
.cu-btn{
    font-size: 30rpx!important;
    float: right;
}

.bot-bar{
    position: fixed;
    display: flex;
    align-items:center;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
}
.total-num{
    display: block;
}
.bot-check checkbox{
    margin: 0;
}
.bot-check{
    width: 80rpx;
    padding-left: 10rpx;
}
.bot-all{
    width: 100rpx;
}
.total-num{
    text-align: right;
    padding-right: 10rpx;
    width: 390rpx;
}
.font{
    color:red;
    font-size: 40rpx;
}
.delete-btn{
    margin-left:400rpx ;
}
.bot-btn{
    width: 180rpx;
    text-align: center;
    color: #fff;
    background-color: red;
    line-height: 100rpx;
}

.bot{
    height: 100rpx;
}