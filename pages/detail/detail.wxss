/* pages/detile/detile.wxss */
page{
    background-color: #fff;
}

.detile-swiper{
    width: 100%;
    height: 800rpx;
}

.item{
    width: 100%;
    height: 100%;
}

.item image{
    width: 100%;
    height: 100%;
}

.price{
    margin: 15rpx 20rpx;
}

.price-sy{
    font-size: 30rpx;
    color: red;
}

.price-num{
    font-size: 50rpx;
    color: red;
}

.title{
    color: black;
    font-size: 35rpx;
    margin: 0 20rpx;
}

.addition{
    color: grey;
    font-size: 25rpx;
    margin: 0 20rpx;
    margin-bottom: 15rpx;
}

.modal-img image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin: 20rpx 0;
    box-shadow: 0 0 5rpx #888888;
}

.modal-price{
    margin-left: -150rpx;
}

.modal-close{
    margin-top: -150rpx!important;
}

.modal-content{
    text-align: left;
    display: block;
    max-height: 600rpx;
    overflow: auto;
    padding: 20rpx;
    background-color: #fff;
}

.modal-item{
    padding: 10rpx 0;
}

.modal-cont{
    display: flex;
    justify-content:space-between;
    align-items: center;
}

.cutLine{
    width: 100%;
    margin: 10rpx 0;
    border-top: 1px solid #f1f1f1;
}

.action{
    background-color: #fff;
}

.zhanwei{
    height: 100rpx;
}

.choose-bar{
    min-height: 80rpx;
    height: 80rpx;
}

.xiangqing{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #f1f1f1;
}

.detile-img{
    width: 100%;
}

.detile-img image{
    width: 100%;
    display: block;
}

.bottom-bar{
    position: fixed;
    width: 100%;
    z-index: 9999;
    bottom: 0;
    left: 0;
}

.red-border{
    border: solid red 1px;
    box-sizing: border-box;
}

.banner image{
    width:750rpx;
    max-height: 100rpx;
}