.sm-card{
    margin: 25rpx;
    margin-bottom: 0;
    display: flex!important;
    flex-wrap: wrap;
    position: relative;
    justify-content: space-between;
}

.sm-img{
    border-radius: 10rpx;
    width:340rpx;
    height: 200rpx;
    display: block;
    margin-bottom: 20rpx;
}

.clean-items{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    background-color: #f1f1f1;
    padding: 20rpx;
    justify-content:space-between;
}

.clean-item{
    width: 49%;
    overflow: hidden;
    background-color: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.clean-item image{
    display: block;
    height: 300rpx;
}

.item-title{
    padding: 10rpx 0;
    padding-left: 20rpx;
    color: black;
}

.item-price{
    padding: 10rpx 0;
    padding-left: 20rpx;
    color: red;
}

.desc{
    background-color: gainsboro;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 10rpx;
    font-size: 20rpx;
}