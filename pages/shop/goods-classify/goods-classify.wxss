/* pages/shop/goods-classify/goods-classify.wxss */
.clean-items{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    background-color: #f1f1f1;
    padding: 20rpx;
    justify-content:space-between;
}

.clean-item{
    width: 49%;
    overflow: hidden;
    background-color: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.clean-item image{
    display: block;
    height: 300rpx;
}

.item-title{
    padding: 10rpx 0;
    padding-left: 20rpx;
    color: black;
}

.item-price{
    padding: 10rpx 0;
    padding-left: 20rpx;
    color: red;
}

.desc{
    background-color: gainsboro;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 10rpx;
    font-size: 20rpx;
}